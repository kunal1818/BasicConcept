<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_parent"
    android:weightSum="5"
    tools:context="com.example.android.basicconcept.MainViewPager">

    <FrameLayout
        android:id="@+id/framelayout"
        style="@style/match_parent">

        <LinearLayout style="@style/match_parent"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                style="@style/match_wrap"

                android:layout_weight=".1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_upcoming"
                    style="@style/match_wrap"
                    android:layout_weight="1"
                    android:text="@string/upcoming" />

                <Button
                    android:id="@+id/btn_past"
                    style="@style/match_wrap"
                    android:layout_weight="1"
                    android:text="@string/past" />

            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                style="@style/match_wrap"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/medium_text"
                android:layout_marginRight="@dimen/medium_text"
                android:layout_weight="4.87" />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>
